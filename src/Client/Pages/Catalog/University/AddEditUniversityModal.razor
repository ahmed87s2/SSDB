@using SSDB.Domain.Enums;
@inject Microsoft.Extensions.Localization.IStringLocalizer<AddEditUniversityModal> _localizer

<EditForm Model="@AddEditUniversityModel" OnValidSubmit="SaveAsync">
    <FluentValidationValidator @ref="_fluentValidationValidator" />
    <MudDialog>
        <TitleContent>
            @{
                if (AddEditUniversityModel.Id == 0)
                {
                    <MudText Typo="Typo.h6">
                        <MudIcon Icon="@Icons.Material.Filled.Add" Class="mr-3 mb-n1" />
                        @_localizer["Add University"]
                    </MudText>
                }
                else
                {
                    <MudText Typo="Typo.h6">
                        <MudIcon Icon="@Icons.Material.Filled.Update" Class="mr-3 mb-n1" />
                        @_localizer["Update University"]
                    </MudText>
                }
            }
        </TitleContent>
        <DialogContent>
            <MudGrid>
                @if (AddEditUniversityModel.Id != 0)
                {
                    <MudItem xs="12" md="6">
                        <MudTextField Disabled For="@(() => AddEditUniversityModel.Id)" @bind-Value="AddEditUniversityModel.Id" Label="@_localizer["Id"]" />
                    </MudItem>
                }
                <MudItem xs="12" md="6">
                    <MudTextField T="string" For="@(() => AddEditUniversityModel.Name)" @bind-Value="AddEditUniversityModel.Name" Label="@_localizer["Name"]" />
                </MudItem>
                <MudItem xs="12">
                    <MudSelect T="string" Label="@_localizer["Type"]" For="@(() => AddEditUniversityModel.Type)" @bind-Value="AddEditUniversityModel.Type" Variant="Variant.Outlined">
                        <MudSelectItem T="string" Value="UniversityType.Inhouse.ToString()">@UniversityType.Inhouse.ToString()</MudSelectItem>
                        <MudSelectItem T="string" Value="UniversityType.OutSource.ToString()">@UniversityType.OutSource.ToString()</MudSelectItem>
                    </MudSelect>
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudCheckBox T="bool" For="@(() => AddEditUniversityModel.IsActive)" Label="@_localizer["Is Active?"]" @bind-Checked="AddEditUniversityModel.IsActive" Color="Color.Primary" Class="ml-n1"></MudCheckBox>
                    </MudItem>
            </MudGrid>
        </DialogContent>
        <DialogActions>
            <MudButton DisableElevation Variant="Variant.Filled" OnClick="Cancel">@_localizer["Cancel"]</MudButton>
            @if (AddEditUniversityModel.Id != 0)
            {
                <MudButton DisableElevation Variant="Variant.Filled" ButtonType="ButtonType.Submit" Disabled="@(!Validated)" Color="Color.Secondary">@_localizer["Update"]</MudButton>
            }
            else
            {
                <MudButton DisableElevation Variant="Variant.Filled" ButtonType="ButtonType.Submit" Disabled="@(!Validated)" Color="Color.Success">@_localizer["Save"]</MudButton>
            }
        </DialogActions>
    </MudDialog>
</EditForm>